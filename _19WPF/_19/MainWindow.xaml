<Window x:Class="_19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_19"
        mc:Ignorable="d"
        Title="MainWindow" Background="LightGray" Height="450" Width="800">
    <Grid>
        <TextBox Name="H" Height="30" Width="100"  Text="Heigt in cm" FontSize="16" Margin="0,0,300,200"></TextBox>
        <TextBox Name="W" Height="30" Width="100" Text="Weight in kg" FontSize="16" Margin="0,0,300,100"></TextBox>
        <TextBlock x:Name="result" Height="100" Width="150" FontSize="16" Margin="50,200,0,0" Background="White"></TextBlock>
        <Button x:Name="print" Content="Calculate" FontSize="16" Height="30" Width="100" Background="Wheat" Margin="0,0,300,0" Click="print_Click"></Button>
    </Grid>
</Window>
